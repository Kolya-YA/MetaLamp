mixin dropdown-widget(data)
    include ../field-header/field-header
    include ../dropdown-item/dropdown-item
    -var comment= data.isOpen ? "Expanded" : "Default"

    .dropdown-widget
        +field-header("Dropdown", comment)
        details.dropdown-widget__details(open=data.isOpen)
            summary.dropdown-widget__summary
                span= data.header
                //- span= items[0]
            .dropdown-widget__inputs
                each item in data.items
                    +dropdown-item(item)
                if data.withBtns
                    .dropdown-widget__btns
                        button Очистить
                        button Применить
