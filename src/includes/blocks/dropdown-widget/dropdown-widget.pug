mixin dropdown-widget(items, isOpen)
    include ../field-header/field-header
    include ../dropdown-item/dropdown-item
    -var comment= isOpen ? "Expanded" : "Default"

    .dropdown-widget
        +field-header("Dropdown", comment)
        details.dropdown-widget__details(open=isOpen)
            summary.dropdown-widget__summary
                span= items[0]
            .dropdown-widget__inputs
                each val, key in items[1]
                    +dropdown-item(key, val)
                if items[2]
                    .dropdown-widget__btns
                        button Очистить
                        button Применить
